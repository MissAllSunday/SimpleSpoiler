<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Suki:SimpleSpoiler</id>
	<name>Simple Spoiler</name>
	<version>2.0</version>
	<type>modification</type>
	<install for="2.0 - 2.0.99">
	    <readme parsebbc="true">readme.txt</readme>
		<require-file name="Subs-SimpleSpoiler.php" destination="$sourcedir" />
        <require-dir name="Themes" destination="$boarddir">Theme files</require-dir>
		<require-file name="spoiler.gif" destination="$imagesdir/bbc" />
		<code>install.php</code>
	</install>
	<uninstall for="2.0 - 2.0.99">
		<remove-file name="$sourcedir/Subs-SimpleSpoiler.php" />
		<remove-file name="$languagedir/SimpleSpoiler.english.php" />
		<remove-file name="$languagedir/SimpleSpoiler.spanish_latin.php" />
		<remove-file name="$languagedir/SimpleSpoiler.spanish_latin-utf8.php" />
		<remove-file name="$languagedir/SimpleSpoiler.spanish_es.php" />
		<remove-file name="$languagedir/SimpleSpoiler.spanish_es-utf8.php" />
		<remove-file name="$languagedir/SimpleSpoiler.russian.php" />
		<remove-file name="$languagedir/SimpleSpoiler.russian-utf8.php" />
		<remove-file name="$languagedir/SimpleSpoiler.german.php" />
		<remove-file name="$imagesdir/bbc/spoiler.gif" />
        <remove-file name="$themedir/scripts/simpleSpoiler.js" />
        <remove-file name="$themedir/css/simpleSpoiler.css" />
		<code>remove.php</code>
	</uninstall>
</package-info>